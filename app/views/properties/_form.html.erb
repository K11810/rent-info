<%= form_for(property) do |f| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :物件名 %><br>
    <%= f.text_field :property_name %><br>
  </div>

  <div class="field">
    <%= f.label :賃料 %><br>
    <%= f.number_field :rent %>円<br>
  </div>

  <div class="field">
    <%= f.label :住所 %><br>
    <%= f.text_area :address %><br>
  </div>

  <div class="field">
    <%= f.label :築年数 %><br>
    <%= f.number_field :age_of_a_building %>年<br>
  </div>

  <div class="field">
    <%= f.label :備考 %><br>
    <%= f.text_area :note %><br>
  </div>

<Hr>

     <% station_count = 1 %>

      <%= f.fields_for :stations do |station_f| %>

        <h3>最寄り駅<%= station_count %></h3>

        <%= station_f.label :路線名 %><br>
        <%= station_f.text_field :line_name %><br>

        <%= station_f.label :駅名 %><br>
        <%= station_f.text_field :station_name %><br>

        <%= station_f.label :徒歩分数 %><br>
        <%= station_f.number_field :walking_time %>分<br>

       <% station_count += 1 %>
        
      <% end %>

    <% if action_name == 'new' %>
      <div class="actions">
        <%= f.submit :登録する %>
      </div>
    <% elsif action_name == 'edit' %>
      <div class="actions">
        <%= f.submit :更新する %>
      </div>
    <% end %>

<% end %>
