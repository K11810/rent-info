<h3>以下の内容で、送信する</h3>

<%= form_for @property, url: properties_path do |form| %>
  <%= form.hidden_field :property_name %>
  <%= form.hidden_field :rent %>
  <%= form.hidden_field :address %>
  <%= form.hidden_field :age_of_a_building %>
  <%= form.hidden_field :note %>

  <p>物件名:<%= @property.property_name %></p>
  <p>賃料:<%= @property.rent %></p>
  <p>住所:<%= @property.address %></p>
  <p>築年数:<%= @property.age_of_a_building %></p>
  <p>備考:<%= @property.note %></p>

<%= form_for @property, url: new_property_path, method: 'get' do |form| %>
  <%= form.hidden_field :property_name %>
  <%= form.hidden_field :rent %>
  <%= form.hidden_field :address %>
  <%= form.hidden_field :age_of_a_building %>
  <%= form.hidden_field :note %>

  <%= form.submit '戻る' %>
<% end %>